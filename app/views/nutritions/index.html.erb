<p id="notice"><%= notice %></p>

<h1>Nutritions</h1>

<table style="width: 100%;" border=1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Calorie</th>
      <th>Fat</th>
      <th>Food name</th>
      <th>Cusine</th>
      <th>allergy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nutritions.each do |nutrition| %>
      <tr>
        <td><%= nutrition.name %></td>
        <td><%= nutrition.calorie %></td>
        <td><%= nutrition.fat %></td>
        <td><%= nutrition.food_name %></td>
        <td><%= nutrition.cusine %></td>
        <td><%= nutrition.allergy %></td>
        <td><%= link_to 'Show', nutrition %></td>
        <td><%= link_to 'Edit', edit_nutrition_path(nutrition) %></td>
        <td><%= link_to 'Destroy', nutrition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

